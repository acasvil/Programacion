package bucle6;
import java.util.Scanner;
public class Bucle6 {

	public static void main(String[] args) {
		
		boolean listo=false;
		
		while (listo=true)
			{
			System.out.println("Introduce tu primer digito");
			Scanner entrada1= new Scanner(System.in);
			int primernum = entrada1.nextInt();

			System.out.println("Introduce tu segundo digito");
			Scanner entrada2 = new Scanner(System.in);
			int segundonum = entrada2.nextInt();
		
			if (primernum == segundonum) {
			System.out.println("los d√≠gitos son iguales vuelve a introducirlos");
			}
			else break ;
			}
		System.out.println("hola");
	
		}

}
